                  <input type="file" id="productImage" accept="image/png,image/jpeg">
                  {{!-- <input type="file" id="productImage" placeholder="Add Image"  required > --}}
                  <button id="addProductButton">Add Products</button>
                  {{!-- <button id="addProductButton" onclick="addProduct(event)">Add Product</button> --}}
              </div>
          </div>


   <div class="wrapper">
        <div class="buttons">
          <button class="button-value" onclick="filterProduct('all')">All</button>
          <button class="button-value" onclick="filterProduct('Vehicles')">
            Vehicles
          </button>
          <button class="button-value" onclick="filterProduct('Electronics')">
            Electronics
          </button>
          <button class="button-value" onclick="filterProduct('Academics')">
            Academics
          </button>
          <button class="button-value" onclick="filterProduct('Sports')">
            Sports
          </button>
          <button class="button-value" onclick="filterProduct('Miscellaneous')">
            Miscellaneous
